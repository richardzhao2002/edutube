<% layout(layout_directory+'/mainLayout') -%>
	<div class="kt-subheader   kt-grid__item" id="kt_subheader">
		<div class="kt-subheader__main">
			<h3 class="kt-subheader__title">
				<%= page_title %>
			</h3>
			<span class="kt-subheader__separator kt-subheader__separator--v"></span>
			<div class="kt-subheader__breadcrumbs">
				<a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
				<span class="kt-subheader__breadcrumbs-separator"></span>
				<span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
					<%= page_title %>
				</span>
			</div>
		</div>
	</div>


	<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
		<div class="row">
			<div class="col-lg-12">
				<div class="kt-portlet">
					<form class="kt-form kt-form--label-right" id="frmAddAdmin"
						action="<%= generateUrl('admin.insert') %>" method="POST" enctype="multipart/form-data">
						<div class="kt-portlet__body">
							<div class="form-group row">
								<div class="col-lg-6">
									<label for="first_name" class="control-label asterisk">First Name</label>
									<div class="controls">
										<input id="first_name" name="first_name" type="text"
											placeholder="Enter First Name" class="form-control required" required
											data-validation-required-message="This field is required" value=""
											pattern="[A-Za-z]+" />
									</div>
								</div>
								<div class="col-lg-6">
									<label for="last_name" class="control-label asterisk">Last Name</label>
									<div class="controls">
										<input id="last_name" name="last_name" type="text" placeholder="Enter Last Name"
											class="form-control required" required
											data-validation-required-message="This field is required" value=""
											pattern="[A-Za-z]+" />
									</div>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-lg-6">
									<label for="email" class="control-label asterisk">Email</label>
									<div class="controls">
										<input id="email" name="email" type="text" autocomplete="off"
										placeholder="Enter Email" class="form-control required" required
										data-validation-required-message="This field is required" value=""
										data-validation-regex-regex="([A-Za-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})"
										data-validation-regex-message="Enter Valid Email" aria-invalid="true" />
									</div>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-lg-6 col-sm-6 col-md-6">
									<label class="control-label">Profile Image</label>
									<input type="file" name="profile_pic" id="profile_pic" class="form-control"
									accept="image/*">
								</div>
									
							</div>
						</div>
						<div class="kt-portlet__foot">
							<div class="kt-form__actions">
								<div class="row">
								<div class="col-lg-6">
									<button type="submit" class="btn btn-primary">Save</button>
									<a href="<%= generateUrl('admin.listing') %>" class="btn btn-secondary">Cancel</a>
								</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>