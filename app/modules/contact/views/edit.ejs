<% layout(layout_directory+'/mainLayout') -%>
  <div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
        <%= page_title %>
      </h3>
      <span class="kt-subheader__separator kt-subheader__separator--v"></span>
    </div>
  </div>

  <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
      <div class="col-lg-12">
        <div class="kt-portlet">
          <form class="kt-form kt-form--label-right" id="frmFAQ" action="<%= generateUrl('contact.update') %>"
            method="POST" enctype='multipart/form-data'>

            <div class="kt-portlet__body">
              <div class="form-group row">
                <div class="col-lg-12">
                  <label>Name</label>
                  <input type="text" value="<%= response.name %>" name="name" id="name" class="form-control required"
                    required placeholder="Enter Name">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-lg-12">
                  <label>Email</label>
                  <input type="email" value="<%= response.email %>" name="email" id="email"
                    class="form-control required" required placeholder="Enter Email Address">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-lg-12">
                  <label>Phone</label>
                  <input type="number" value="<%= response.phone %>" pattern="[0-9]{10}" name="phone" id="phone"
                    class="form-control required" required placeholder="Enter Phone Number">
                </div>
              </div>
            </div>
            <input type="hidden" name="id" value="<%= response._id %>">

            <div class="kt-portlet__foot">
              <div class="kt-form__actions">
                <div class="row">
                  <div class="col-lg-6">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="<%= generateUrl('contact.list') %>" class="btn btn-secondary">Cancel</a>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>