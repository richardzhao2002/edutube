<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
  <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
          <%= page_title %>
      </h3>
      <span class="kt-subheader__separator kt-subheader__separator--v"></span>
  </div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
  <div class="row">
      <div class="col-lg-12">
          <div class="kt-portlet">
          <form class="kt-form kt-form--label-right" id="frmAdminEdit" action="<%= generateUrl('admin.update') %>" method="POST" enctype='multipart/form-data'>

            <div class="kt-portlet__body">
              <div class="form-group row">
                <div class="col-lg-6 form-group-sub">
                  <label class="control-label asterisk">First Name:</label>
                  <input type="text" name="first_name" value="<%=response.first_name%>" id="first_name" class="form-control required" required placeholder="Enter First Name"/>
                </div>
                <div class="col-lg-6 form-group-sub">
                    <label class="control-label asterisk">Last Name:</label>
                    <input type="text" name="last_name" value="<%=response.last_name%>"  id="last_name" class="form-control required" required placeholder="Enter Last Name"/>
                  </div>
              </div>
              <div class="form-group row">
                <div class="col-lg-6 form-group-sub">
                  <label class="control-label asterisk">Email:</label>
                  <input type="email" name="email" value="<%=response.email%>"  id="email" class="form-control required" required placeholder="Enter Email"/>
                </div>
              </div>
            </div>

            <div class="kt-portlet__foot">
              <div class="kt-form__actions">
                <div class="row">
                  <div class="col-lg-6">
                    <input type="hidden" name="role" value="<%=roledata._id%>">
                    <input type="hidden" name="id" value="<%=response._id%>">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="<%= generateUrl('admin.list') %>" class="btn btn-secondary">Cancel</a>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
    </div>  
  </div>
</div>
  